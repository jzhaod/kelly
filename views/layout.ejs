<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Kelly Criterion Portfolio' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
    <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Navigation -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link <%= page === 'index' ? 'active' : '' %>" href="/">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= page === 'stock_settings' ? 'active' : '' %>" href="/stock-settings">
                                <i class="bi bi-gear"></i> Stock Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= page === 'about' ? 'active' : '' %>" href="/about">
                                <i class="bi bi-info-circle"></i> About
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= typeof title !== 'undefined' ? title : 'Kelly Criterion Portfolio' %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="toggleNav">
                            <i class="bi bi-list"></i>
                        </button>
                    </div>
                </div>
                <%- typeof body !== 'undefined' ? body : '' %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sidebar.js"></script>
    <%- typeof script !== 'undefined' ? script : '' %>
</body>
</html> 